{
    "name": "turntable_test_safe",
    "description": "安全的转台测试：确保采集总是能停止",
    "steps": [
        {
            "id": "activation_loop",
            "name": "步骤3: 激活循环处理",
            "type": "Loop",
            "config": {
                "count": 1,
                "steps": [
                    {
                        "id": "send_uid",
                        "name": "下发uid",
                        "type": "DeviceCommand",
                        "config": {
                            "deviceId": "burn-device-01",
                            "command": "doCustom",
                            "args": {
								"command": "sendUid"
                            }
                        }
                    },{
                        "id": "exec_program",
                        "name": "执行激活流程",
                        "type": "DeviceCommand",
                        "config": {
                            "deviceId": "burn-device-01",
                            "command": "doJob",
                            "args": {
								"command": "Program"
                            }                            
                        }
                    },{
                        "id": "wait_program",
                        "name": "等待激活完成",
                        "type": "WaitForSignal",
                        "config": {
                            "deviceId": "burn-device-01",
                            "command": "doJob",
                            "signal": "doJobCompleted",
                            "storeResultIn": "doJobResult",
                            "timeoutMs": 3000000                       
                        }
                    }
                ]
            }
        }
    ]
} 